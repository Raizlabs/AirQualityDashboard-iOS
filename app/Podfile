platform :ios, '10.0'
use_frameworks!
inhibit_all_warnings!

def shared
    pod 'Marshal'
    pod 'KeychainAccess'
    pod 'BonMot'
    pod 'BLEAirQuality', :path => './Submodules/BLEAirQuality'
    pod 'Alamofire'
    pod 'Anchorage'
    pod 'Swiftilities'
end

target 'AirQualityDashboard' do
  pod 'Instabug'
  pod 'Crashlytics'

  pod 'GoogleAnalytics',   '~>3.0'
  
  pod 'SimulatorStatusMagic', :configurations => ['Debug']

  target 'AirQualityDashboardTests' do
    pod 'OHHTTPStubs/Swift'
  end

  shared()
end

target 'Services' do
    shared()
end

pod 'SwiftGen'
pod 'Sourcery', '~> 0.12.0'
pod 'SwiftLint'
